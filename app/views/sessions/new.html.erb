<% input_class = "mt-1 w-full rounded-md bg-slate-50 border border-slate-300 px-3 py-2 text-slate-900 hover:border-slate-400 focus:border-slate-500 focus:ring-2 focus:ring-slate-400/30" %>

<div class="mx-auto max-w-md">
  <div class="rounded-xl border bg-white p-6 shadow-sm">
    <h1 class="text-2xl font-semibold tracking-tight">Log in</h1>

    <p class="text-slate-600 mt-1 mb-6">
      Enter your email and password to continue.
    </p>

    <%= form_with url: session_path, method: :post do %>
      <div class="grid gap-5">
        <div>
          <%= label_tag :email_address, "Email", class: "block text-sm font-medium text-slate-700" %>
          <%= email_field_tag :email_address, nil, autocomplete: "email", class: input_class %>
        </div>

        <div>
          <%= label_tag :password, "Password", class: "block text-sm font-medium text-slate-700" %>
          <%= password_field_tag :password, nil, autocomplete: "current-password", class: input_class %>
        </div>
      </div>

      <div class="mt-6">
        <%= submit_tag "Sign in",
              class: "w-full inline-flex justify-center items-center rounded-md bg-slate-900 px-5 py-2 text-white hover:bg-slate-800 focus:ring-2 focus:ring-slate-400/30" %>
      </div>
    <% end %>

    <%# Optional signup link if you have it %>
    <%# 
    <p class="text-sm text-slate-600 mt-4">
      Donâ€™t have an account?
      <%= link_to "Sign up", new_user_path, class: "font-medium text-slate-900 hover:underline" %>
    </p>
  
  </div>
</div>
